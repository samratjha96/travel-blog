---
import config from "@/config/config.json";
import Base from "@/layouts/Base.astro";
import { markdownify } from "@/lib/utils/textConverter";
import { getCollection } from "astro:content";
import { FaCalendarAlt, FaGlobe } from "react-icons/fa";

const pagesEntries = await getCollection("pages");
const entry = pagesEntries.find((e) => e.id === "contact");
const contactinfo = config.contactinfo as unknown as { calendar: string; website: string };
const { title, description, meta_title, image } = entry?.data || {
  title: "Contact",
};
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="section">
    <div class="container">
      <h1 set:html={markdownify(title)} class="h2 page-heading" />
      <div class="row justify-center">
        <div class="col-12 md:col-8 lg:col-6">
          <p class="mb-8 text-lg text-center">
            Want to chat about travel, ask a question, or just say hi? Book a time or find me online.
          </p>
          <ul class="flex flex-col space-y-6">
            <li>
              <a
                href={contactinfo.calendar}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center text-xl text-theme-dark hover:text-primary transition-colors"
              >
                <FaCalendarAlt className="mr-3 text-primary" />
                <span class="font-semibold">Book a 30-min chat</span>
              </a>
            </li>
            <li>
              <a
                href={contactinfo.website}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center text-xl text-theme-dark hover:text-primary transition-colors"
              >
                <FaGlobe className="mr-3 text-primary" />
                <span class="font-semibold">samratjha.com</span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Base>
